= form_for @deal do |f|
  - if @deal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@deal.errors.count, "error")} prohibited this deal from being saved:"
      %ul
        - @deal.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :fundamental
    = f.text_field :fundamental

  .field
    = f.label :profit
    = f.number_field :profit

  = f.hidden_field :trend_id, value: @deal.trend_id || params[:trend_id]
  .actions
    = f.submit 'Save'
