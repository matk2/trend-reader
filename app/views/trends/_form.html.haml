= form_for @trend do |f|
  - if @trend.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trend.errors.count, "error")} prohibited this trend from being saved:"
      %ul
        - @trend.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :fundamental
    = f.text_field :fundamental

  .field
    = f.label :profit
    = f.text_field :profit
  .actions
    = f.submit 'Save'
