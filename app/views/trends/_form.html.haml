= form_for @trend do |f|
  - if @trend.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trend.errors.count, "error")} prohibited this trend from being saved:"
      %ul
        - @trend.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :kind
    = f.text_field :kind
  .field
    = f.label :rate_id
    = f.number_field :rate_id
  .actions
    = f.submit 'Save'
