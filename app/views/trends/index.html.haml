%h1 Listing trends

%table
  %thead
    %tr
      %th Trend
      %th Currency Pair
      %th

  %tbody
    - @trends.each do |trend|
      %tr
        %td= trend.kind
        %td= trend.rate.currency_pair.display_name
        %td= link_to 'New deal', new_deal_path(trend_id: trend.id)

= link_to 'Deals', deals_path
= link_to 'logout', destroy_user_session_path, method: :delete
